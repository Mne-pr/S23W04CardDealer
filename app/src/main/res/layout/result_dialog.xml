<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="80dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/text_total"
            android:text="0"
            android:textSize="25sp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/royal_straight_flush"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Royal Straight Flush: "
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_total"
            app:layout_constraintBottom_toTopOf="@id/back_straight_flush"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/royal_straight_flush_value"
            android:fontFamily="monospace"
            android:text="0"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_total"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/back_straight_flush"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back Straight Flush:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/royal_straight_flush"
            app:layout_constraintBottom_toTopOf="@id/straight_flush"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/back_straight_flush_value"
            android:fontFamily="monospace"
            android:text="1"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/royal_straight_flush"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/straight_flush"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Straight Flush:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/back_straight_flush"
            app:layout_constraintBottom_toTopOf="@id/four_card"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/straight_flush_value"
            android:fontFamily="monospace"
            android:text="2"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/back_straight_flush"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/four_card"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four Card:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/straight_flush"
            app:layout_constraintBottom_toTopOf="@id/full_house"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/four_card_value"
            android:fontFamily="monospace"
            android:text="3"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/straight_flush"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/full_house"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full House:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/four_card"
            app:layout_constraintBottom_toTopOf="@id/flush"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/full_house_value"
            android:fontFamily="monospace"
            android:text="4"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/four_card"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/flush"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flush:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/full_house"
            app:layout_constraintBottom_toTopOf="@id/mountain"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/flush_value"
            android:fontFamily="monospace"
            android:text="5"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/full_house"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/mountain"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mountain:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/flush"
            app:layout_constraintBottom_toTopOf="@id/back_straight"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/mountain_value"
            android:fontFamily="monospace"
            android:text="6"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/flush"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/back_straight"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back Straight:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/mountain"
            app:layout_constraintBottom_toTopOf="@id/straight"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/back_straight_value"
            android:fontFamily="monospace"
            android:text="7"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mountain"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/straight"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Straight:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/back_straight"
            app:layout_constraintBottom_toTopOf="@id/triple"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/straight_value"
            android:fontFamily="monospace"
            android:text="8"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/back_straight"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/triple"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triple:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/straight"
            app:layout_constraintBottom_toTopOf="@id/two_pair"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/triple_value"
            android:fontFamily="monospace"
            android:text="9"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/straight"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/two_pair"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Pair:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/triple"
            app:layout_constraintBottom_toTopOf="@id/one_pair"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/two_pair_value"
            android:fontFamily="monospace"
            android:text="10"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/triple"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/one_pair"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Pair:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/two_pair"
            app:layout_constraintBottom_toTopOf="@id/top"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/one_pair_value"
            android:fontFamily="monospace"
            android:text="11"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/two_pair"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/top"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/one_pair"
            app:layout_constraintBottom_toTopOf="@id/btn_ok"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/top_value"
            android:fontFamily="monospace"
            android:text="12"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one_pair"
            app:layout_constraintStart_toEndOf="@id/royal_straight_flush"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:fontFamily="monospace"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>